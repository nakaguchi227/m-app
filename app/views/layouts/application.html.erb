<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
          <div class="header-logo">
            <%= link_to("MusicApp", "/") %>
          </div>
          <ul style="list-style-type: none" class="header-menus">
        <% if @current_user %>
        <li>
          <%= @current_user.name %>
        </li>
        <li>
          
           <%= link_to("ログアウト", "/logout", {method: :post}) %>
         </li>
         <% else %>
            <li>
              <%= link_to("ログイン", "/login") %>
            </li>
            <li>
              <%= link_to("新規ユーザー登録", "/users/new") %>
            </li>
          <% end %>
          </ul>
        </header>
<br>
     <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

          <%= yield %>


  </body>
</html>
